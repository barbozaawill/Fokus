<Window x:Class="Fokus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fokus"
        mc:Ignorable="d"
        Title="Taskly" Height="960" Width="1280"
        WindowStartupLocation="centerscreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="435"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="140"/>
        </Grid.ColumnDefinitions> 
        
        <!--Primeira coluna-->
        <Rectangle Fill="{StaticResource PrimeiraColuna}"/>

        <!--Segunda coluna-->
        <Rectangle Grid.Column="1" 
                   Fill="{StaticResource SegundaColuna}"/>
        
        <!--Grid da Task List-->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="38"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!--Label para task-->
            <Label Style="{StaticResource Header1}" 
                   Content="Tarefas"
                   Padding="20 0 0 0"
                   VerticalContentAlignment="Center"/>

            <Button Style="{StaticResource BotaoAdicionarTask}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="center"
                    Height="40"
                    Width="40"
                    Margin="0 0 20 0">

                <Grid>
                    <Viewbox Width="25"
                             Height="25">
                        <Path Data="{StaticResource AddTaskIcon}" Fill="{StaticResource OnAccent}"/>
                    </Viewbox>
                </Grid>
            </Button>

            <TextBox x:Name="BuscarTarefas"
                     Style="{StaticResource SearchBarTask}" 
                     Grid.Row="1"
                     Margin="20 0"/>

            <Label IsHitTestVisible="False"
                   Content="Buscar tarefas..."
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   Margin="39 0 0 0"
                   Foreground="{StaticResource Borders}"
                   Visibility="{Binding Text.IsEmpty, ElementName=BuscarTarefas, Converter={StaticResource BooleanToVisibilityConverter}}"/>

            <Button Style="{StaticResource BotaoDeBuscar}"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0 0 25 0"
                    Padding="10"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Height="30"
                    Width="30">

                <Viewbox Width="16" Height="16">
                    <Path Data="{StaticResource AddSearchIcon}" Fill="{StaticResource Borders}" Stroke="Black" StrokeThickness="1"/>
                </Viewbox>
            </Button>
            
            <!--List View-->
            <ListView Grid.Row="2"
                      Background="Transparent"
                      Margin="0 20"
                      BorderBrush="Transparent">
                
            </ListView>
            
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="230"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            
            <!--Detalhe das views-->
            <Grid Margin="20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Título da tarefa"
                           Style="{StaticResource Titulo}"
                           VerticalAlignment="Center"/>

                <Border HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="20 5"
                        Background="{StaticResource MedImportanceColor}"
                        CornerRadius="3">
                    <TextBlock Text="Crítico"
                               Foreground="{StaticResource OnAccent}"
                               FontWeight="Bold"
                               FontSize="15">
                    </TextBlock>
                </Border>
                
                <!--Descrição Scrool Viewer-->
                <ScrollViewer  Grid.Row="1"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Disabled">
                    <!--Descrição-->
                    <TextBlock Text="Isso é uma curta descrição de teste."
                               FontSize="16"
                               Foreground="{StaticResource Placeholder}"
                               Margin=" 0 20"/>
                </ScrollViewer>
                
                <!--Data-->
                <TextBlock Text="Data:"
                           Background="{StaticResource PrimeiraColuna}"
                           Padding="20 3"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Grid.Row="2"
                           Foreground="White"/>

            </Grid>

            <Grid Grid.Row="1"
                  Margin="0 20 0 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                
                <!--List title-->
                <TextBlock Style="{StaticResource Titulo}"
                           Text="Check List das Tarefas"
                           VerticalAlignment="Center"
                           Margin="20 0 0 0"/>
                <!--Check list-->
                <ListView 
                      Background="Transparent"
                      BorderThickness="0"
                      Grid.Row="1">
                    
                </ListView>
            </Grid>

            <!--Task View Buttons-->
            <Grid Grid.Row="2">
                <Button/>
                <Button/>
                <Button/>
            </Grid>
        </Grid>

        <!--Terceira coluna-->
        <Rectangle Grid.Column="2"/>
    </Grid>
</Window>
